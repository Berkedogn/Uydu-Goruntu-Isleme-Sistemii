@* Views/Beaches/Delete.cshtml *@
@model UyduGoruntu.Models.Beach

@{
    ViewData["Title"] = "Sahil Sil";
}

<h2>Sahili Sil</h2>
<h3>@Model.Name isimli sahili silmek istediğinize emin misiniz?</h3>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
