@* Views/Beaches/Index.cshtml *@
@model IEnumerable<SatelliteImageExplorer.Models.Beach>

@{
    ViewData["Title"] = "Sahiller";
}

<h2>Sahiller</h2>
<p>
    <a asp-action="Create" class="btn btn-success">+ Yeni Sahil Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Şehir</th>
            <th>Açıklama</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.City</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>