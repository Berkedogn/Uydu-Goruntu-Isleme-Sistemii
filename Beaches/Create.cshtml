@model UyduGoruntu.Models.Beach

@{
    ViewData["Title"] = "Yeni Plaj Ekle";
}

<h1>Yeni Plaj Ekle</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Plaj Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">Görsel URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
