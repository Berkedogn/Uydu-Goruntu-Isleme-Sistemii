@model IEnumerable<UyduGoruntu.Models.Mountain>

<h2>Dağlar</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Dağ Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Şehri</th>
            <th>Yükseklik (m)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mountain in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@mountain.Id">@mountain.Name</a></td>
                <td>@mountain.City</td>
                <td>@mountain.Height</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@mountain.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@mountain.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
