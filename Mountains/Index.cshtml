@model IEnumerable<SatelliteImageExplorer.Models.Mountain>

@{
    ViewData["Title"] = "Dağlar";
}

<h2>Dağlar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Yükseklik (metre)</th>
            <th>Açıklama</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Height</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="100" />
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = item.Id })">Düzenle</a>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.Id })">Detay</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Create")">Yeni Dağ Ekle</a>
