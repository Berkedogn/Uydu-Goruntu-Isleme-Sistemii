@model UyduGoruntu.Models.City

@{
    ViewData["Title"] = "Şehir Detayları";
}

<h2>@Model.Name</h2>

<div>
    <p><strong>Nüfus:</strong> @Model.Population</p>
    <p><strong>Açıklama:</strong> @Model.Description</p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.Name Uydu Görüntüsü" style="max-width:100%; height:auto;" />
    }

</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
