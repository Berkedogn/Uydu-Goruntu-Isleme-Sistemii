@model UyduGoruntu.Models.City

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Population"></label>
        <input asp-for="Population" class="form-control" />
        <span asp-validation-for="Population" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="/images/akcakoca.jpg" />
        <small class="form-text text-muted">
            Lütfen resmin wwwroot/images klasöründeki tam yolunu yazınız. Örnek: /images/akcakoca.jpg
        </small>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>

