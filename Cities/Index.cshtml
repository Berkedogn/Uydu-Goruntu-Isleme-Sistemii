@model IEnumerable<UyduGoruntu.Models.City>
@{
    ViewData["Title"] = "≈ûehirler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(-45deg, #0f2027, #203a43, #2c5364, #1f4037);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        min-height: 100vh;
        color: white;
    }

    @@keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .container-custom {
        padding: 40px;
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(0,0,0,0.5);
        margin-top: 60px;
    }

    .table th, .table td {
        color: white;
        vertical-align: middle;
    }

    .btn-custom {
        margin-right: 5px;
    }

    .btn-warning, .btn-danger {
        color: white;
    }

    a.btn-primary {
        margin-top: 20px;
    }
</style>


<div class="container container-custom">
    <h2 class="mb-4 text-white">üìç ≈ûehirler</h2>

    <table class="table table-striped table-dark table-hover">
        <thead class="thead-light">
            <tr>
                <th>≈ûehir Adƒ±</th>
                <th>N√ºfus</th>
                <th>ƒ∞≈ülemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var city in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@city.Id" target="_blank" class="text-info fw-bold">
                            @city.Name
                        </a>
                    </td>
                    <td>@city.Population.ToString("N0")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@city.Id" class="btn btn-sm btn-warning btn-custom">D√ºzenle</a>
                        <a asp-action="Delete" asp-route-id="@city.Id" class="btn btn-sm btn-danger btn-custom">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">‚ûï Yeni ≈ûehir Ekle</a>
</div>
