@{
    ViewData["Title"] = "Sonuç";
}

<h2>Sonuç</h2>

@if (ViewBag.ImagePath != null)
{
    <div>
        <img src="@ViewBag.ImagePath" alt="Görsel" style="max-width: 100%; height: auto;" />
    </div>
}
else
{
    <p style="color: red;">@ViewBag.Error</p>
}

@if (ViewBag.Info != null)
{
    <div style="margin-top: 20px;">
        <strong>Bilgi:</strong> @ViewBag.Info
    </div>
}
