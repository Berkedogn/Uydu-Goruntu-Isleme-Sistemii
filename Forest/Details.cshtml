@model UyduGoruntu.Models.Forest

@{
    ViewData["Title"] = "Orman Detayı";
}

<h2>@Model.Name</h2>

<div class="card" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Şehir</dt>
            <dd class="col-sm-8">@Model.City</dd>

            <dt class="col-sm-4">Açıklama</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Resim</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Orman Resmi" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
                }
                else
                {
                    <span>Resim yok</span>
                }
            </dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        </div>
    </div>
</div>
