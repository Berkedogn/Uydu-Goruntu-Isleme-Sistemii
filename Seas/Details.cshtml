@model UyduGoruntu.Models.Sea

@{
    ViewData["Title"] = "Deniz Detayları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: url('/images/sea-details.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #154360;
    }

    .details-container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 15px;
        max-width: 700px;
        margin: 50px auto;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #1F618D;
    }

    p {
        font-size: 18px;
        margin-bottom: 15px;
    }

    img {
        display: block;
        margin: 0 auto 20px auto;
        border-radius: 10px;
        max-width: 100%;
        height: auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .btn-warning {
        background-color: #f39c12;
        border-color: #e67e22;
        color: white;
        font-weight: bold;
    }

    .btn-secondary {
        background-color: #d5dbdb;
        border-color: #aab7b8;
        color: black;
    }
</style>

<div class="details-container">
    <h2>@Model.Name</h2>

    <p><strong>Açıklama:</strong> @Model.Description</p>

    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="@Model.ImagePath" alt="@Model.Name" />
    }

    <div class="mt-3 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mr-2">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </div>
</div>
