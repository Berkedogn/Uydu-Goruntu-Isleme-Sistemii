<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Satellite Image Explorer</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cities" asp-action="Index">Şehirler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Seas" asp-action="Index">Denizler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Beaches" asp-action="Index">Plajlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Mountains" asp-action="Index">Dağlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Forests" asp-action="Index">Ormanlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HistoricPlaces" asp-action="Index">Tarihi Yerler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TravelDestinations" asp-action="Index">Gezi Noktaları</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">© 2025 Satellite Image Explorer. Tüm Haklar Saklıdır.</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
