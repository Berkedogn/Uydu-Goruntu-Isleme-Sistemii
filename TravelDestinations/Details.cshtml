@model UyduGoruntu.Models.TravelDestination

@{
    ViewData["Title"] = "Gezilecek Yer Detayı";
}

<h2 class="mb-4 text-success"><i class="fas fa-map-marker-alt"></i> @Model.Title</h2>

<div class="card shadow-sm border-success" style="max-width: 700px;">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 350px; object-fit: cover;" />
    }
    else
    {
        <div class="bg-light text-center py-5 text-muted">
            <i class="fas fa-image fa-5x"></i>
            <div>Görsel bulunamadı</div>
        </div>
    }

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Konum</dt>
            <dd class="col-sm-8">@Model.Location</dd>

            <dt class="col-sm-4">Açıklama</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>
