@model UyduGoruntu.Models.TravelDestination

@{
    ViewData["Title"] = "Yeni Gezilecek Yer";
}

<h2 class="mb-4 text-success"><i class="fas fa-map-marker-alt"></i> Yeni Gezilecek Yer Ekle</h2>

<form asp-action="Create" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" required />
        <div class="invalid-feedback">
            Lütfen başlık giriniz.
        </div>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
        <div class="invalid-feedback">
            Lütfen açıklama giriniz.
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label"></label>
        <input asp-for="Location" class="form-control" required />
        <div class="invalid-feedback">
            Lütfen konum giriniz.
        </div>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
        <small class="form-text text-muted">Geçerli bir görsel URL'si girin (opsiyonel).</small>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i> Kaydet
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
