@model IEnumerable<UyduGoruntu.Models.TravelDestination>
@{
    ViewData["Title"] = "Travel Destinations";
}

<h2>Gezilecek Yerler</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Konum</th>
            <th>Görsel</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Location</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
