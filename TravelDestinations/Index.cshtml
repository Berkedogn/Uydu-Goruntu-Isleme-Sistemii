@model IEnumerable<UyduGoruntu.Models.TravelDestination>

@{
    ViewData["Title"] = "Gezilecek Yerler";
}

<h2 class="mb-4 text-success"><i class="fas fa-map-marked-alt"></i> Gezilecek Yerler</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Yeni Ekle
    </a>
</p>

<table class="table table-striped align-middle">
    <thead class="table-success">
        <tr>
            <th>Başlık</th>
            <th>Konum</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
                </td>
                <td>@item.Location</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Title" style="width: 100px; height: 60px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">Görsel yok</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
